{{#if addNewAnswer}}
  <div>
    <form>
      <div class="form-group">
        <label for="responder">Username</label>
        {{input value=responder id="responder"}}
      </div>

      <div class="form-group">
        <label for="atext">Answer</label>
        {{input value=atext id="atext"}}
      </div>

      <button {{action 'savea'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
