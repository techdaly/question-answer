{{#if updateQuestionForm}}
  <h4>Update {{question.asker}}'s question, "{{question.title}}".</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=question.title}}
        </div>

        <div class="form-group">
          <label for="asker">Username</label>
          {{input value=asker id="asker" placeholder=question.asker}}
        </div>

        <div class="form-group">
          <label for="qtext">Question</label>
          {{input value=qtext id="qtext" placeholder=question.qtext}}
        </div>

        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
